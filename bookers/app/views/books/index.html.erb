
<body>
  <p class=flash>
    <%= flash[:destroy] %>
  </p>
  <h1 class="title_books">Books</h1>
    <table>
      <div class="books_top">
        <p class="books_top_items">Title</p>
        <p class="books_top_items">Body</p>
      </div>
      <% @books.each do |list| %>
      <div class="books_box">
        <span class="books_box_title"><%= list.title %></span>
        <span class="books_box_body"><%= list.body %></span>
        <div class="link">
          <%= link_to "Show", book_path(list.id) %>
        </div>
        <div class="link">
          <%= link_to "Edit", edit_book_path(list.id) %>
        </div>
        <div class="link">
          <%= link_to "Destroy", destroy_book_path(list.id), method: :delete, "data-confirm" => "Are you sure？" %>
        </div>
      </div>
      <% end %>
    </table>


  <h2 class=newbook_title>New book</h2>
  <% if @book.errors.any? %>
    <div class=errors_box>
      <h2 class=errors_top>
        <%= @book.errors.count %>errors prohibited this book from being saved:
      </h2>
      <ul class="errors_list">
        <% @book.errors.full_messages.each do |message| %>
          <li class="errors_list_items"><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <!-- form_with部分 -->
  <%= form_with model: @book, url:'/books', local:true do |f| %>
    <h4>title</h4>
    <%= f.text_field :title %>
    <h4>body</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
</body>
