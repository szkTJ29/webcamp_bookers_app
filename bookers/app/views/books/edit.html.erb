<body id="body_edit">
  <h1 class="title_edit">Editing Book</h1>
  <% if @book.errors.any? %>
    <div class=errors_box>
      <h2 class=errors_top>
        <%= @book.errors.count %>errors prohibited this book from being saved:
      </h2>
      <ul class="errors_list">
        <% @book.errors.full_messages.each do |message| %>
          <li class="errors_list_items"><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
  <div class="title_box_edit">
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>
  <div class="body_box_edit">
    <h4>Body</h4>
    <%= f.text_area :body %>
  </div>
  <div class="update">
    <%= f.submit 'Update Book' %>
  </div>
  <div class="link_edit">
    <%= link_to "Show", book_path(@book.id) %>
     |
    <%= link_to "Back", "/books" %>
  </div>
  <% end %>
</body>